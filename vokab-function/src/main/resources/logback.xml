<configuration>
    <!-- change this to configure logging -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--    adjust the level to "warn" or "error" reduce the amount of logging -->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>